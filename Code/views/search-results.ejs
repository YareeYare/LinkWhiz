<!DOCTYPE html>
<html lang="en">
<head>
    <style>
      .my-button {
        font-size: 13px; 
        margin: 8px 5px;
      }
      .header{
            display : flex;
            justify-content: flex-end;
      }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
    <div class="header">
      <form action="/home" method="GET">
        <button class="my-button" type="submit">Home</button>
        <br>
      </form>
    </div>
    <div class="container">
        <h1 align="center">Search Results</h1>
        <p align="center">Showing results for: <%= query %></p>
        <% if (results.length === 0) { %>
          <p>No results found.</p>
        <% } else { %>
          <table border="0" height="50%" width="50%" align="center"
          style="border-spacing: 0px 0;">
            <thead>
              <tr>
                <th>Long URL</th>
                <th>Short URL</th>
                <th>Note</th>
              </tr>
            </thead>
            <tbody>
              <% results.forEach((result) => { %>
                <tr align="center">
                  <td> <a href="<%= result.longURL %>"> <%= result.longURL %> </a> </td>
                  <td> <a href="http://localhost:4623/url/<%=result.shortURL%>"> <%= result.shortURL %> </a> </td>
                  <td><%= result.notes %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>


</body>
</html>